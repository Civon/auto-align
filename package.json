{
    "name": "align-mode",
    "displayName": "Auto Align",
    "description": "Automatically align by commas, vertical bars, etc.",
    "icon": "icon.png",
    "version": "0.0.1",
    "publisher": "Gruntfuggly",
    "repository": "https://github.com/Gruntfuggly/auto-align",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "auto-align.format",
                "title": "Auto Align: Align"
            },
            {
                "command": "auto-align.enable",
                "title": "Auto Align: Enable auto align mode"
            },
            {
                "command": "auto-align.disable",
                "title": "Auto Align: Disable auto align mode"
            },
            {
                "command": "auto-align.changeSeparator",
                "title": "Auto Align: Change Separator"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "auto-align configuration",
            "properties": {
                "autoAlign.separator": {
                    "type": "string",
                    "description": "Separator for alignment",
                    "default": ","
                }
            }
        }
    },
    "devDependencies": {
        "vscode": "^1.0.0"
    }
}